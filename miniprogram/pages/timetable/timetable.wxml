<view class="container">
  <view class="z-row toolbar">
    <view class="z-left toolbar-info">
      <view class="z-medium" style="font-size: 16px;">第{{ currentIndex + 1 }}周
        <text class="iconfont icon-unfold"></text>
      </view>
      <view class="z-text-secondary" style="font-size: 10px;">2025-2026学年 第一学期</view>
    </view>
    <view class="z-row-items z-right">
      <text class="iconfont icon-menu z-icon-btn" bind:tap="goToList"></text>
    </view>
  </view>
  <timetable 
    bindchange="onSwiperChange" 
    current="{{currentIndex}}" 
    weeks="{{weeks}}"
    colors="{{colors}}"
    timeSlots="{{timeSlots}}"
    style="flex-grow: 1;"
  ></timetable>
</view>